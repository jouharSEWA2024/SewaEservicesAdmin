@model SEWAEContractorAdmin.Models.GovernmentUserViewModel
@{
	@using Microsoft.AspNetCore.Mvc.Localization;
	@using Microsoft.AspNetCore.Localization;
	ViewData["Title"] = "ManageUsers";
	@inject IViewLocalizer localizer
	string culture = "", uiculture = "", url = "";
	if (Context.Request.QueryString.HasValue)
	{
		url = Context.Request.QueryString.Value;
		culture = Context.Request.Query["culture"];
		uiculture = Context.Request.Query["ui-culture"];
	}
	var requestCulture = Context.Features.Get<IRequestCultureFeature>();
}
<!--**********************************
Content body start
***********************************-->
<div class=" content-body default-height">
	<!-- row -->
	<div class="container-fluid">
		@if (Model.ErrorCode != null && Model.ErrorType == "Success")
		{
			<div id="Error">
				<div class="row d-flex align-content-center align-items-center">
					<div class="alert alert-primary text-dark" role="alert">
						<h6 class="text-dark text-center">
							@Model.ErrorMessage
						</h6>
					</div>
				</div>
			</div>
		}
		@if (Model.ErrorCode != null && Model.ErrorType == "Fail")
		{
			<div id="Error">
				<div class="row d-flex align-content-center align-items-center">
					<div class="alert alert-secondary text-dark" role="alert">
						<h6 class="text-dark text-center">
							@Model.ErrorMessage
						</h6>
					</div>
				</div>
			</div>
		}
		<form method="post" asp-controller="Admin" asp-action="CreateGovernmentUser" id="CreateGovernmentUserForm">

			<input type="hidden" asp-for="ErrorCode" value="@Model.ErrorCode" id="ErrorCode" />
			<input type="hidden" asp-for="ErrorMessage" value="@Model.ErrorMessage" id="ErrorMessage" />
			<div class="row justify-content-center align-items-center">
				<div class="col-xl-6">
					<div class="row justify-content-center align-items-center">
						<div class="col-xl-12">
							<div class="card">
								<div class="card-body">
									<div class="row">
										<div class="col-lg-12">
											<div class="mb-3">
												<label class="mb-1 form-label">@localizer["Government"]</label>
												@Html.DropDownListFor(x => x.SelectedBP, new SelectList(Model.GovernmentBPList, "MainBp", "EnglishName"), "Select Government", new { @class = "default-select form-control wide mb-3 select2 select2-hidden-accessible", @aria_label = "Default Select Government", @id = "GovtList", style = "width:100%", tabindex = "-1" })
												<span class="text-danger" id="GovtListErr" data-msg="@localizer["Please select the government entity from the list"]"></span>
											</div>
										</div>
										<div class="col-lg-12">
											<div class="mb-3">
												<label for="UserName" class="form-label">@localizer["UserName"]<span class="required">*</span></label>
												<input class="form-control" asp-for="UserName" id="UserName" type="text">
												<span class="text-danger" id="UserNameErr" data-msg="@localizer["Please enter Username"]"></span>
											</div>
										</div>
										<div class="col-lg-12">
											<div class="mb-3">
												<label for="UserName" class="form-label">@localizer["Email"]<span class="required">*</span></label>
												<input class="form-control" asp-for="Email" id="Email" type="text">
												<span class="text-danger" id="EmailErr" data-msg="@localizer["Please enter email"]"></span>
											</div>
										</div>
									</div>
									<div class="form-group" style="text-align:center;">
										<button type="button" class="btn btn-primary light" onclick="return Submit();">@localizer["Submit"]</button>
									</div>

								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</form>
	</div>
</div>

<!--**********************************
	Content body end
***********************************-->
@section ventic_style
{

}

@section ventic_script
{
	<!--**********************************
		Scripts
	***********************************-->
	<!-- Required vendors -->
	<script src="~/ventic/vendor/global/global.min.js"></script>
	<script src="~/ventic/vendor/bootstrap-datetimepicker/js/moment.js"></script>
	<script src="~/ventic/vendor/bootstrap-datetimepicker/js/bootstrap-datetimepicker.min.js"></script>
	<script src="~/ventic/vendor/bootstrap-select/js/bootstrap-select.min.js"></script>



	<script src="~/ventic/js/custom.min.js"></script>
	<script src="~/ventic/js/deznav-init.js"></script>
	<script src="~/assets/js/Custom/GovtRegistration.js"></script>
	<script type="text/javascript">
		var ErrorCode = $('#ErrorCode').val();
		if (ErrorCode == "2") {
			$('#CreateGovernmentUserForm').hide();
		}
	</script>

}

