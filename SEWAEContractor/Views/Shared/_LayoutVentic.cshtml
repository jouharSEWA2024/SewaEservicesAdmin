@{
    @using Microsoft.Extensions.Configuration
    @inject IConfiguration Configuration
    
}
<!DOCTYPE html>
<html lang="en">
<head>
    <partial name="Ventic/_Meta" />
    <title>[@ViewBag.Title] @Configuration.GetSection("DefaultValue")["Title"]</title>
    <!-- Favicon icon -->
    <link rel="icon" type="image/png" sizes="16x16" href="~/ventic/images/logo-full.png">
    <!-- Bottom CSS -->
    @RenderSection("Ventic_style", false)
    <link href="~/ventic/vendor/bootstrap-select/css/bootstrap-select.min.css" rel="stylesheet">
    <link href="~/ventic/css/style.css" rel="stylesheet" class="main-css">
</head>
<body>
    <partial name="ventic/_PreLoader" />
    <!--**********************************
        Main wrapper start
    ***********************************-->
    <div id="main-wrapper">
        <partial name="Ventic/_NevHeader" />
        <partial name="Ventic/_Chatbox" />
        <partial name="Ventic/_Header" />
        <partial name="Ventic/_Sidebar" />
        @RenderBody()
        <partial name="Ventic/_Footer" />
    </div>
    <!--**********************************
        Main wrapper end
    ***********************************-->
    @RenderSection("ventic_script", false)
</body>
</html>
